<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_purple">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingLeft="32dp"
        android:layout_marginTop="64dp"
        android:id="@+id/rl_info">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/avatar"
            android:id="@+id/ig_icon"/>
        <TextView
            android:id="@+id/tv_nick"
            android:text="昵称"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/text_dark_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ig_icon"
            android:layout_toRightOf="@+id/ig_icon"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_nickcontent"
            android:text="Pinke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ig_icon"
            android:layout_toRightOf="@+id/ig_icon"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/rl_info"
        android:id="@+id/rl_lookjob">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_home"
            android:id="@+id/iv_home"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="#1d1d26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="帮找工作"
            android:textSize="17sp"
            />
        <LinearLayout
            android:layout_gravity="bottom"
            android:background="#221d1d26"
            android:layout_width="266dp"
            android:layout_height="1dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/rl_feekback"
        android:layout_below="@id/rl_lookjob">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_lists"
            android:id="@+id/iv_lists"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="#1d1d26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="意见反馈"
            android:textSize="17sp"
            />
        <LinearLayout
            android:layout_gravity="bottom"
            android:background="#221d1d26"
            android:layout_width="266dp"
            android:layout_height="1dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/rl_feekback"
        android:id="@+id/rl_settings">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_settings"
            android:id="@+id/iv_settings"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="#1d1d26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="设置"
            android:textSize="17sp"
            />
        <LinearLayout
            android:layout_gravity="bottom"
            android:background="#221d1d26"
            android:layout_width="266dp"
            android:layout_height="1dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/rl_help"
        android:layout_below="@id/rl_settings">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_help"
            android:src="@mipmap/icon_groups"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:textColor="#1d1d26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="帮助"
            android:textSize="17sp"
            />
        <LinearLayout
            android:background="#221d1d26"
            android:layout_gravity="bottom"
            android:layout_width="266dp"
            android:layout_height="1dp"/>
    </FrameLayout>


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:id="@+id/ll_logout"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:background="#221d1d26"
            android:layout_gravity="top"
            android:layout_width="266dp"
            android:layout_height="1dp"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_logout"/>
        <TextView
            android:textColor="#1d1d26"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_logout"
            android:text="登出"
            android:textSize="17sp"
            android:layout_marginLeft="50dp"
            />
    </FrameLayout>
</RelativeLayout>